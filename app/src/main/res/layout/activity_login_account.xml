<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <!--color_00103A-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_00103A"
        tools:context=".ui.login.loginWithAccount.LoginAccountActivity">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="32dp"
            android:padding="4dp"
            android:src="@drawable/img_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="44dp"
            android:padding="4dp"
            android:src="@drawable/img_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo_selex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_back" />

        <TextView
            android:id="@+id/tv_please_scan_qr"
            style="@style/style_text_28sp_white_inter_medium"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/login_with_selex_account"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="150dp"
            android:hint="@string/user_name"
            android:textColorHint="@color/color_C7C6CA"
            app:boxStrokeColor="@color/selector"
            app:errorEnabled="false"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            app:hintTextColor="@color/md_theme_dark_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_please_scan_qr">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:textSize="28sp"
                android:singleLine="true"
                android:textColor="@color/color_C7C6CA" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:hint="@string/enter_password"
            android:textColorHint="@color/color_C7C6CA"
            app:boxStrokeColor="@color/selector"
            app:errorEnabled="false"
            app:endIconMode="password_toggle"
            app:errorTextAppearance="@style/style_text_12sdp"
            app:endIconTint="@color/md_theme_dark_onSurfaceVariant"
            app:hintTextAppearance="@style/GreenTextInputLayout"
            app:hintTextColor="@color/md_theme_dark_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_layout_username">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:textColor="@color/color_C7C6CA"
                android:textSize="28sp"
                android:singleLine="true"
                tools:ignore="Deprecated" />

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_login"
            android:layout_width="330dp"
            android:layout_height="94dp"
            android:layout_marginTop="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_layout_password">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints,UnusedAttribute">

                <LinearLayout
                    android:id="@+id/layout_btn_login"
                    android:gravity="center"
                    android:paddingStart="48dp"
                    android:paddingEnd="48dp"
                    android:background="@drawable/bg_button_disable"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="94dp">

                    <ImageView
                        android:id="@+id/img_icon_btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/img_icon_left_login_gray" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:textColor="@color/color_FFC7C6CA"
                        style="@style/style_text_30sp_white_inter_semi_bold"
                        android:text="@string/login" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_help"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_error_account_or_password"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:background="@color/md_theme_light_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:src="@drawable/img_icon_error"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_close_error"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:text="@string/login_not_success"
                    style="@style/style_text_32sp_white_inter_bold"/>

                <TextView
                    android:text="@string/error_info_account_or_password"
                    style="@style/style_text_28sp_white_inter_medium"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_close_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_icon_close" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progress_bar_login_account"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toTopOf="@+id/btn_login" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bottom_dialogFragment"
            android:name="com.selex.bssStation.core.utility.BottomDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
