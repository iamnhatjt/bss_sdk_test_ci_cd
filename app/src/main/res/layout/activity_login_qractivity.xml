<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_00103A"
        tools:context=".screen.login.loginQr.LoginQRActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="32dp"
                android:padding="4dp"
                android:src="@drawable/img_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="44dp"
                android:padding="4dp"
                android:src="@drawable/img_help"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_scan_qr_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_logo_selex"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_please_scan_qr"
                style="@style/style_text_28sp_white_inter_medium"
                android:layout_marginTop="24dp"
                android:text="@string/scan_qr_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_logo" />

            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="@dimen/_169sdp"
                android:layout_height="@dimen/_169sdp"
                android:layout_marginTop="48dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_please_scan_qr" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutLoading"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_CCFFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/img_qr"
                app:layout_constraintEnd_toEndOf="@+id/img_qr"
                app:layout_constraintStart_toStartOf="@+id/img_qr"
                app:layout_constraintTop_toTopOf="@+id/img_qr">

                <ProgressBar
                    android:id="@+id/progress_bar_loading"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:indeterminateTint="@color/color_2656C8"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_processing"
                    style="@style/style_text_28sp_white_inter_medium"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progress_bar_loading" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutError"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_CCFFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/img_qr"
                app:layout_constraintEnd_toEndOf="@+id/img_qr"
                app:layout_constraintStart_toStartOf="@+id/img_qr"
                app:layout_constraintTop_toTopOf="@+id/img_qr">

                <TextView
                    android:id="@+id/tvError"
                    style="@style/style_text_28sp_white_inter_medium"
                    android:text="@string/qr_expired"
                    android:textColor="@color/md_theme_light_error" />

                <LinearLayout
                    android:id="@+id/btnError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_button_blue"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="21dp"
                        app:srcCompat="@drawable/img_icon_refresh" />

                    <TextView
                        android:id="@+id/tvInButtonError"
                        style="@style/style_text_28sp_white_inter_medium"
                        android:layout_height="64dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="center"
                        android:text="@string/get_new_code" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_or"
                style="@style/style_text_28sp_white_inter_medium"
                android:layout_marginBottom="24dp"
                android:text="@string/or"
                app:layout_constraintBottom_toTopOf="@+id/layout_button_login_account"
                app:layout_constraintEnd_toEndOf="@+id/layout_button_login_account"
                app:layout_constraintStart_toStartOf="@+id/layout_button_login_account" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_button_login_account"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_marginBottom="52dp"
                android:foreground="@drawable/ripple_rounded_button_textview"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_button_blue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_18sdp"
                    android:paddingEnd="@dimen/_18sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/img_icon_left_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_with_selex_account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/img_logo_selex"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/img_qr"
                app:layout_constraintEnd_toEndOf="@+id/img_qr"
                app:layout_constraintStart_toStartOf="@+id/img_qr"
                app:layout_constraintTop_toTopOf="@+id/img_qr"
                app:srcCompat="@drawable/img_icon_left_logo" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_scan_qr_code_success"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/textView4"
                style="@style/style_text_32sp_white_inter_bold"
                android:layout_marginTop="170dp"
                android:text="@string/scan_qr_success"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                style="@style/style_text_28sp_white_inter_medium"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/please_chose_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <LinearLayout
                android:layout_width="440dp"
                android:layout_height="440dp"
                android:layout_marginTop="48dp"
                android:background="@color/md_theme_light_primaryContainer"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:srcCompat="@tools:sample/avatars">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/img_banner" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/style_text_32sp_white_inter_medium"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_help"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>